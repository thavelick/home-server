---
use_default_settings: true

general:
  debug: false
  instance_name: "SearXNG"

search:
  safe_search: 2
  autocomplete: 'duckduckgo'

server:
  # Is overwritten by ${SEARXNG_SECRET}
  secret_key: {{searxng_secret_key}}
  limiter: true
  image_proxy: true
  # public URL of the instance, to ensure correct inbound links. Is overwritten
  # by ${SEARXNG_URL}.
  # base_url: http://example.com/location

redis:
  # URL to connect redis database. Is overwritten by ${SEARXNG_REDIS_URL}.
  url: unix:///usr/local/searxng-redis/run/redis.sock?db=0

ui:
  static_use_hash: true

# preferences:
#   lock:
#     - autocomplete
#     - method

enabled_plugins:
  - 'Hash plugin'
  - 'Self Informations'
  - 'Tracker URL remover'
  - 'Ahmia blacklist'
  - 'Hostname replace'
  # - 'Open Access DOI rewrite'

# plugins:
#   - only_show_green_results

hostname_replace:
  '(www\.)?reddit\.com$': 'old.reddit.com'
  '(www\.)?twitter\.com$': 'nitter.net'
  '(www\.)?medium\.com$': 'scribe.rip'
  '(www\.)?quora\.com$': 'quetre.catsarch.com'

engines:
  - name: bing
    disabled: true
  - name: brave
    disabled: true
  - name: duckduckgo
    disabled: false
  - name: google
    disabled: true
  - name: qwant
    disabled: true
  - name: startpage
    disabled: false
  - name: duckduckgo images
    disabled: false
  - name: bing images
    disabled: true
  - name: google images
    disabled: true
  - name: qwant images
    disabled: true
  - name: library genesis
    disabled: false
  - name: duckduckgo news
    disabled: false
  - name: google news
    disabled: true
  - name: bing news
    disabled: true
  - name: qwant news
    disabled: true
  - name: yahoo news
    disabled: true
  - name: marginalia
    disabled: false
    engine: json_engine
    shortcut: m
    paging: false
    # index: {"0": "popular", "1": "blogs", "2": "big_sites",
    # "3": "default", "4": experimental"}
    search_url: https://api.marginalia.nu/{{marginalia_api_key}}/search/{query}?index=4&count=20
    results_query: results
    url_query: url
    title_query: title
    content_query: description
    timeout: 1.5
    about:
      website: https://www.marginalia.nu/
      official_api_documentation: https://api.marginalia.nu/
      use_official_api: true
      require_api_key: true
      results: JSON
