    disabled: true
  - name: duckduckgo
    disabled: false
  - name: google
    disabled: true
  - name: qwant
    disabled: true
  - name: startpage
    disabled: false
  - name: duckduckgo images
    disabled: false
  - name: bing images
    disabled: true
  - name: google images
    disabled: true
  - name: qwant images
    disabled: true
  - name: library genesis
    disabled: false
  - name: duckduckgo news
    disabled: false
  - name: google news
    disabled: true
  - name: bing news
    disabled: true
  - name: qwant news
    disabled: true
  - name: yahoo news
